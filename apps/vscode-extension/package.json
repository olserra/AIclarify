{
  "name": "cursorai-analysis-vscode",
  "displayName": "AIclarify",
  "description": "Real-time code analysis with CursorAI",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.87.0"
  },
  "categories": [
    "Programming Languages",
    "Linters",
    "Other"
  ],
  "activationEvents": [
    "onLanguage:javascript",
    "onLanguage:typescript",
    "onLanguage:python"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "cursorai.analyze",
        "title": "Analyze Code with AIclarify"
      },
      {
        "command": "cursorai.generateTests",
        "title": "Generate Tests with AIclarify"
      },
      {
        "command": "cursorai.toggleRealTimeAnalysis",
        "title": "Toggle Real-time Analysis"
      },
      {
        "command": "cursorai.applyPerformanceImprovements",
        "title": "Apply Performance Improvements"
      },
      {
        "command": "cursorai.applySecurityBestPractices",
        "title": "Apply Security Best Practices"
      },
      {
        "command": "cursorai.applyMaintainabilityImprovements",
        "title": "AIclarify: Apply Maintainability Improvements",
        "category": "AIclarify"
      }
    ],
    "configuration": {
      "title": "AIclarify",
      "properties": {
        "cursorai.apiKey": {
          "type": "string",
          "default": "",
          "description": "API Key for AIclarify"
        },
        "cursorai.analysisLevel": {
          "type": "string",
          "enum": [
            "basic",
            "detailed",
            "comprehensive"
          ],
          "default": "basic",
          "description": "Level of code analysis to perform"
        },
        "cursorai.testFramework": {
          "type": "string",
          "enum": [
            "jest",
            "mocha",
            "pytest"
          ],
          "default": "jest",
          "description": "Test framework to use for generated tests"
        },
        "cursorai.realTimeAnalysis": {
          "type": "boolean",
          "default": true,
          "description": "Enable real-time code analysis"
        },
        "cursorai.analysisDelay": {
          "type": "number",
          "default": 1000,
          "description": "Delay in milliseconds before performing real-time analysis"
        },
        "cursorai.maintainability.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable maintainability analysis and improvements"
        },
        "cursorai.maintainability.threshold": {
          "type": "number",
          "default": 70,
          "description": "Minimum maintainability score threshold (0-100)",
          "minimum": 0,
          "maximum": 100
        },
        "cursorai.testGeneration.coverage": {
          "type": "string",
          "enum": [
            "unit",
            "integration",
            "e2e"
          ],
          "default": "unit",
          "description": "Type of test coverage to generate"
        },
        "cursorai.testGeneration.includeMocks": {
          "type": "boolean",
          "default": true,
          "description": "Include mock implementations in generated tests"
        },
        "cursorai.testGeneration.includeComments": {
          "type": "boolean",
          "default": true,
          "description": "Include explanatory comments in generated tests"
        }
      }
    },
    "menus": {
      "editor/context": [
        {
          "command": "cursorai.analyze",
          "group": "navigation",
          "when": "editorHasSelection"
        },
        {
          "command": "cursorai.generateTests",
          "group": "navigation",
          "when": "editorHasSelection"
        },
        {
          "command": "cursorai.toggleRealTimeAnalysis",
          "group": "navigation"
        }
      ],
      "editor/title": [
        {
          "command": "cursorai.toggleRealTimeAnalysis",
          "group": "navigation",
          "when": "editorTextFocus"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "ts-node scripts/build.ts",
    "dev": "ts-node scripts/dev.ts",
    "publish": "ts-node scripts/publish.ts",
    "test": "ts-node scripts/test.ts",
    "install": "ts-node scripts/install.ts",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts",
    "clean": "rimraf dist package",
    "package": "vsce package",
    "preview": "vsce preview"
  },
  "dependencies": {
    "axios": "^1.6.7",
    "vscode-languageclient": "^9.0.1",
    "vscode-languageserver": "^9.0.1",
    "vscode-languageserver-textdocument": "^1.0.12",
    "@jest/globals": "^29.7.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.19",
    "@types/vscode": "^1.87.0",
    "@typescript-eslint/eslint-plugin": "^7.0.1",
    "@typescript-eslint/parser": "^7.0.1",
    "@vscode/vsce": "^2.24.0",
    "eslint": "^8.56.0",
    "rimraf": "^5.0.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}